    "/auth/register": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Menambahkan Data User",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
